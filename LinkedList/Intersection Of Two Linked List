/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) {
 *         val = x;
 *         next = null;
 *     }
 * }
 */
public class Solution {
    public ListNode getIntersectionNode(ListNode headA, ListNode headB) {
        if (headA == null || headB == null) {
            return null;
        }
        
        ListNode A = headA;
        ListNode B = headB;
        while (A != null) {
            while (B != null) {
                if (B == A) {
                    return B;
                } else {
                    B = B.next;
                }
            }
            B = headB;
            A = A.next;
        }
        return null;
 
    }
}
