class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {
       ListNode temp = head;
       int count = 0;
       while (temp != null) {
           count++;
           temp = temp.next;
       }
        
       temp = head; 
       int i = 0;
       while (temp != null) {
           i++;
           if (count == n) {
               temp = temp.next;
               return temp;
           } else if (i == count-n) {
               if (temp.next != null) {
                   temp.next = temp.next.next;
               } else {
                   temp.next = null;
               }
           }
           temp = temp.next;
       }
       
       return head;
        
    }
}

//-----------------OR

class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {
       ListNode temp = head;
       int count = 0;
       while (temp != null) {
           count++;
           temp = temp.next;
       }
        
       temp = head; 
       int i = 0;
       while (temp != null) {
           i++;
           if (count == n) {
               temp = temp.next;
               return temp;
           } else if (i == count-n) {
               if (temp.next != null) {
                   temp.next = temp.next.next;
               } else {
                   temp.next = null;
               }
           }
           temp = temp.next;
       }
       
       return head;
        
    }
}
