class Solution {
    public int lengthOfLongestSubstring(String s) {
        int start = 0;
        int max = 0;
        HashMap <Character,Integer> map = new HashMap<>();

        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);
            if (map.containsKey(c) && start <= map.get(c)) {
                start = map.get(c);
                start++;
            }
            map.put(c,i);
            max = Math.max(max,i-start + 1);
        }
        return max;
    }
}

//-------------OR

class Solution {
    public int lengthOfLongestSubstring(String s) {
        int start = 0;
        int max = 0;

        HashMap<Integer, Character> map = new HashMap<>();

        for (int end = 0; end < s.length(); ) {
            if (map.containsValue(s.charAt(end))) {
                while (map.containsValue(s.charAt(end))) {
                    map.remove(start);
                    start++;
                }
                map.put(end, s.charAt(end));
            }
            map.put(end, s.charAt(end));

            max = Math.max(max, end - start + 1);
            end++;
        }

        return max;
    }
}
