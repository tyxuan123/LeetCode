//Recursion (Depth-First-Search)
class Solution {
    public List<List<Integer>> combine(int n, int k) {
        List<List<Integer>> result = new ArrayList<>();
        List <Integer> list = new ArrayList<>();

        int [] nums = new int[n];
        for (int i = 0; i < n; i++) {
            nums[i] = i + 1;
        }
        search(nums,k,0,list,result);
        return result;
    }

    private static void search (int [] nums, int depth, int start, List <Integer> list, List<List<Integer>> result) {
        if (depth == 0) {
            result.add(new ArrayList<>(list));
            return;
        }

        for (int i = start; i < nums.length; i++) {
            list.add(nums[i]);
            search(nums,depth-1,i+1,list,result);
            list.remove(list.size() - 1);
        }
    }
}
