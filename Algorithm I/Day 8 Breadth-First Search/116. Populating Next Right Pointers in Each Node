/*
// Definition for a Node.
class Node {
    public int val;
    public Node left;
    public Node right;
    public Node next;

    public Node() {}
    
    public Node(int _val) {
        val = _val;
    }

    public Node(int _val, Node _left, Node _right, Node _next) {
        val = _val;
        left = _left;
        right = _right;
        next = _next;
    }
};
*/

class Solution {
    public Node connect(Node root) {
        
        //check if the head of root is null or not and the root has next level or not
        if (root == null || root.left == null) {
            return root;
        }
        
        root.left.next = root.right;
        
        if (root.next != null) {
            root.right.next = root.next.left;
        }
        
        //Recursion (Breadth-First-Search)
        connect(root.left);
        connect(root.right);

        return root;
        
    }
}
