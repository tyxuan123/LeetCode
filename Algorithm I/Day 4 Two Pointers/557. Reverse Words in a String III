class Solution {
    public String reverseWords(String s) {
        String[] word = s.split(" ");
        StringBuilder reverseWord = new StringBuilder();
        for (int i = 0; i < word.length; i++) {
            int left = 0;
            int right = word[i].length() - 1;
            while (right >= left) {
                reverseWord.append((word[i].charAt(right)));
                right--;
            }
            if (i != word.length - 1) {
                reverseWord.append(" ");
            }
        }
        return reverseWord.toString();
    }
}
